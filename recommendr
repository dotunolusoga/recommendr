#!/usr/bin/env ruby

require "highline/import"

menu_prompt = <<EOS
1. Add a recommendation
2. Edit a recommendation
3. Delete a recommendation
4. List all recommendations
5. Exit
EOS

def print_error_message
  puts "[Help] Run as: ./recommendr manage"
end

if ARGV.length < 1
  print_error_message
elsif ARGV.length == 1
  #Not valid argument
  if ARGV[0] != 'manage'
    print_error_message
  else
    choose do |menu|
      menu.prompt = ""

      menu.choice('Add a recommendation') { say ("") }
      menu.choice('Edit a recommendation') { say ("Which recommendation fails to meet your exacting standards 'Oh Great & Powerful One'?\n") }
      menu.choice('Delete a recommendation') { say ("Which recommendation fails to meet your exacting standards 'Oh Great & Powerful One'?\n") }
      menu.choice('List all recommendations') { say ("No recommendations found. Add a recommendation.\n") }
      menu.choice('Exit') { say ("You have successfully exited the management menu.") }
    end
  end
end
